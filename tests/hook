set -e

#echo "Running hook..."
#env | grep ^RSBACKUP | sort

case "$RSBACKUP_HOOK" in
pre-backup-hook )
  if [ -e hookdata ]; then
    echo >&2 "ERROR: hookdata already exists"
    exit 1
  fi
  touch hookdata
  [ -z "${RUN}" ] || touch ${RUN}-pre.ran
  ;;
post-backup-hook )
  if [ ! -e hookdata ]; then
    echo >&2 "ERROR: hookdata does not exit"
    exit 1
  fi
  rm -f hookdata
  [ -z "${RUN}" ] || touch ${RUN}-post.ran
  ;;
esac
