set -e
. ${srcdir:-.}/setup.sh

for root in ${srcdir:-.}/configs/*; do
  exec 3>got.txt
  s cd ${root}
  s ${RSBACKUP} --dump-config >&3
  s cd -
  compare ${srcdir:-.}/expect/${root##*configs/}.txt got.txt
  rm -f got.txt
done

cleanup
